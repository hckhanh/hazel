{
  "name": "hazel-server",
  "version": "5.0.0",
  "main": "lib/index.js",
  "description": "Lightweight update server for Electron apps",
  "scripts": {
    "dev": "micro-dev lib/server.js",
    "test": "xo && jest",
    "precommit": "lint-staged",
    "vercel-dev": "vercel dev"
  },
  "license": "MIT",
  "repository": "zeit/hazel",
  "xo": {
    "extends": [
      "prettier"
    ],
    "rules": {
      "camelcase": 0,
      "new-cap": 0,
      "unicorn/no-process-exit": 0,
      "no-await-in-loop": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn test && :",
      "prettier --single-quote --no-semi --write --no-editorconfig",
      "git add"
    ]
  },
  "dependencies": {
    "async-retry": "1.3.1",
    "date-fns": "2.16.1",
    "express-useragent": "1.0.15",
    "finalhandler": "1.1.2",
    "got": "11.8.0",
    "handlebars": "4.7.6",
    "micro": "9.3.4",
    "ms": "2.1.2",
    "node-fetch": "2.6.1",
    "router": "1.3.5",
    "semver": "7.3.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "6.15.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.1",
    "micro-dev": "3.0.0",
    "prettier": "2.1.2",
    "test-listen": "1.1.0",
    "xo": "0.42.0"
  }
}
